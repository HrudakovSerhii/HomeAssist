generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  username       String   @unique // Simple username for login
  email          String?  @unique // Optional primary email
  password       String // Hashed password
  displayName    String
  profilePicture String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  lastLoginAt    DateTime @default(now())
  isActive       Boolean  @default(true)

  // Relations
  sessions Session[]
  accounts EmailAccount[]
  processingSchedules ProcessingSchedule[]

  @@map("users")
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  ipAddress String
  userAgent String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

// Email Processing Models

model ProcessedEmails {
  id               String           @id @default(uuid())
  messageId        String           @unique // Gmail message ID for reference
  emailAccountId   String           // Link to email account
  subject          String
  fromAddress      String
  toAddresses      String[]
  ccAddresses      String[]         @default([])
  bccAddresses     String[]         @default([])
  receivedAt       DateTime
  bodyText         String?
  bodyHtml         String?
  processingStatus ProcessingStatus @default(PENDING)
  category         EmailCategory
  priority         Priority
  sentiment        Sentiment
  summary          String
  tags             String[]         @default([])
  confidence       Float
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  emailAccount EmailAccount       @relation(fields: [emailAccountId], references: [id], onDelete: Cascade)
  entities     EntityExtraction[]
  actionItems  ActionItem[]
  scheduleExecutionId String?
  scheduleExecution  ScheduleExecution? @relation(fields: [scheduleExecutionId], references: [id])

  @@index([messageId])
  @@index([emailAccountId])
  @@index([processingStatus])
  @@index([category])
  @@index([priority])
  @@map("processed_emails")
}

model EntityExtraction {
  id                String     @id @default(uuid())
  processedEmailId  String
  entityType        EntityType
  entityValue       String
  confidence        Float
  startPosition     Int?
  endPosition       Int?
  context           String?
  createdAt         DateTime   @default(now())

  processedEmail ProcessedEmails @relation(fields: [processedEmailId], references: [id], onDelete: Cascade)

  @@index([processedEmailId])
  @@index([entityType])
  @@map("entity_extractions")
}

model ActionItem {
  id               String     @id @default(uuid())
  processedEmailId String
  description      String
  actionType       ActionType
  dueDate          DateTime?
  priority         Priority
  isCompleted      Boolean    @default(false)
  completedAt      DateTime?
  assignedTo       String?
  relatedEntityId  String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  processedEmail ProcessedEmails @relation(fields: [processedEmailId], references: [id], onDelete: Cascade)

  @@index([processedEmailId])
  @@index([isCompleted])
  @@index([actionType])
  @@map("action_items")
}

model PromptTemplate {
  id                   String          @id @default(uuid())
  name                 String          @unique
  description          String
  template             String
  expectedOutputSchema Json
  categories           EmailCategory[]
  isActive             Boolean         @default(true)
  version              String          @default("1.0.0")
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt

  @@index([isActive])
  @@map("prompt_templates")
}

model ProcessingRule {
  id         String   @id @default(uuid())
  name       String   @unique
  conditions Json // Array of RuleCondition
  actions    Json // Array of RuleAction
  priority   Int
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([isActive])
  @@index([priority])
  @@map("processing_rules")
}

// Enums
enum ProcessingStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  SKIPPED
}

enum EmailCategory {
  PERSONAL
  WORK
  MARKETING
  NEWSLETTER
  SUPPORT
  NOTIFICATION
  INVOICE
  RECEIPT
  APPOINTMENT
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum Sentiment {
  POSITIVE
  NEGATIVE
  NEUTRAL
  MIXED
}

enum EntityType {
  PERSON
  ORGANIZATION
  DATE
  TIME
  LOCATION
  EMAIL_ADDRESS
  PHONE_NUMBER
  URL
  AMOUNT
  CURRENCY
  INVOICE_NUMBER
  ACCOUNT_NUMBER
  PRODUCT
  REGION
  TECHNOLOGY
  DATE_RANGE
}

enum ActionType {
  SAVE_INVOICE
  SCHEDULE_MEETING
  REPLY_REQUIRED
  FOLLOW_UP
  ARCHIVE
  FORWARD
  CALL
  REVIEW_DOCUMENT
  PAYMENT_DUE
  VIEW_URL
  VIEW_LINK
}

enum ProcessingType {
  DATE_RANGE
  RECURRING
  SPECIFIC_DATES
}

enum LlmFocus {
  general
  sentiment
  urgency
}

enum ExecutionStatus {
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

model ProcessingSchedule {
  id                  String         @id @default(uuid())
  userId              String
  emailAccountId      String
  name                String
  description         String?
  isEnabled           Boolean        @default(true)
  isDefault           Boolean        @default(false)

  // Processing Configuration
  processingType      ProcessingType
  dateRangeFrom      DateTime?
  dateRangeTo        DateTime?
  cronExpression     String?
  timezone           String         @default("UTC")
  specificDates      Json?

  // Processing Preferences
  batchSize          Int            @default(5)
  emailTypePriorities Json          @default("{}")
  senderPriorities   Json          @default("{}")
  llmFocus           LlmFocus      @default(general)

  // Execution Tracking
  lastExecutedAt     DateTime?
  nextExecutionAt    DateTime?
  totalExecutions    Int           @default(0)
  successfulExecutions Int         @default(0)
  failedExecutions   Int           @default(0)

  // Metadata
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  // Relations
  user               User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  emailAccount       EmailAccount  @relation(fields: [emailAccountId], references: [id], onDelete: Cascade)
  executions ScheduleExecution[]

  @@unique([userId, name])
  @@index([nextExecutionAt, isEnabled])
  @@index([userId, emailAccountId])
  @@index([processingType, isEnabled])
  @@map("processing_schedules")
}

model ScheduleExecution {
  id                           String          @id @default(uuid())
  scheduleId                   String
  status                      ExecutionStatus @default(RUNNING)
  startedAt                   DateTime        @default(now())
  completedAt                 DateTime?

  // Progress Tracking
  totalBatchesCount               Int             @default(0)
  completedBatchesCount           Int             @default(0)
  totalEmailsCount                Int             @default(0)
  processedEmailsCount            Int             @default(0)
  failedEmailsCount               Int             @default(0)
  lastProcessedUid                String?

  // Error Handling
  attemptCount               Int             @default(1)
  maxAttempts               Int             @default(3)
  errorMessage              String?
  errorDetails              Json?

  // Performance Metrics
  processingDurationMs       Int?
  averageEmailProcessingTimeMs Int?

  createdAt                 DateTime         @default(now())

  // Relations
  schedule                  ProcessingSchedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  processedEmails          ProcessedEmails[]

  @@index([scheduleId, status])
  @@index([startedAt])
  @@index([status])
  @@map("schedule_executions")
}

model EmailAccount {
  id                    String        @id @default(uuid())
  userId                String // Link to user
  accountType           EmailProvider @default(GMAIL)
  email                 String        @unique // Email address
  displayName           String? // Custom name for this account
  appPassword           String // Encrypted app password (for Gmail/Outlook)
  imapHost              String        @default("imap.gmail.com")
  imapPort              Int           @default(993)
  useSSL                Boolean       @default(true)
  isActive              Boolean       @default(true)
  timezone              String        @default("UTC") // Added timezone support
  hasInitialSchedule    Boolean       @default(false) // Track initial schedule creation
  lastSyncAt            DateTime?
  lastProcessedEmailId  String? // For incremental processing
  lastProcessedAt       DateTime?
  processingDateFrom    DateTime? // Current processing range
  processingDateTo      DateTime?
  isCurrentlyProcessing Boolean       @default(false)
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  // Relations
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  processedEmails ProcessedEmails[]
  processingSchedules ProcessingSchedule[]

  @@index([userId])
  @@index([email])
  @@index([isActive])
  @@map("email_accounts")
}

enum EmailProvider {
  GMAIL
  OUTLOOK
  YAHOO
  IMAP_GENERIC
}
